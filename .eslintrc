{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "globals": {
    "NodeJS": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/jsx-runtime",
    "plugin:@next/next/recommended"
    // "plugin:node/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "react/jsx-curly-brace-presence": [
      "error",
      { "props": "never", "children": "ignore" }
    ],
    "no-unused-vars": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
